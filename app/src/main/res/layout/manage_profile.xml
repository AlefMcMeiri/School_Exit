<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_sign_up"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="220dp"
        android:layout_height="30dp"
        android:text="Manage Profile"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="23sp"
        android:layout_marginTop="15sp"
        />

    <LinearLayout
        android:layout_width="390dp"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        >

        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="80dp"
            android:layout_gravity="left"
            android:layout_marginLeft="20dp"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="157dp"
                android:layout_height="20dp"
                android:layout_marginLeft="3dp"
                android:textColor="@color/black"
                android:text="First Name"
                android:textSize="16sp"
                />

            <EditText
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:inputType="textCapWords"
                android:id="@+id/manageProfileEtFirstName"
                android:background="@drawable/custom_input_edit_text"
                android:drawablePadding="8dp"
                android:drawableStart="@drawable/custom_person_icon"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                />
            <TextView
                android:layout_width="160dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="13sp"
                android:textColor="#D12929"
                android:id="@+id/manageProfileTvFirstName"
                android:text="Invalid first name"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="80dp"
            android:layout_marginLeft="30dp"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="157dp"
                android:layout_height="20dp"
                android:layout_marginLeft="3dp"
                android:textColor="@color/black"
                android:text="Last Name"
                android:textSize="16sp"
                />

            <EditText
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:inputType="textCapWords"
                android:id="@+id/manageProfileEtLastName"
                android:background="@drawable/custom_input_edit_text"
                android:drawablePadding="8dp"
                android:drawableStart="@drawable/custom_person_icon"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                />

            <TextView
                android:layout_width="160dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="13sp"
                android:textColor="#D12929"
                android:id="@+id/manageProfileTvLastName"
                android:text="Invalid last name"
                />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="390dp"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        >

        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="80dp"
            android:layout_gravity="left"
            android:layout_marginLeft="20dp"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="157dp"
                android:layout_height="20dp"
                android:layout_marginLeft="3dp"
                android:textColor="@color/black"
                android:text="Phone number"
                android:textSize="16sp"
                />

            <EditText
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:id="@+id/manageProfileEtPhoneNumber"
                android:inputType="phone"
                android:drawablePadding="8dp"
                android:drawableStart="@drawable/custom_phone_icon"
                android:background="@drawable/custom_input_edit_text"
                android:paddingStart="10dp"
                android:paddingEnd="5dp"
                />

            <TextView
                android:layout_width="180dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="13sp"
                android:textColor="#D12929"
                android:id="@+id/manageProfileTvPhoneNumber"
                android:text="Invalid phone number"
                />



        </LinearLayout>

        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="80dp"
            android:layout_marginLeft="30dp"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="157dp"
                android:layout_height="20dp"
                android:layout_marginLeft="3dp"
                android:textColor="@color/black"
                android:text="Password"
                android:textSize="16sp"
                />

            <EditText
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:id="@+id/manageProfileEtPassword"
                android:inputType="number"
                android:drawablePadding="8dp"
                android:drawableStart="@drawable/custom_id_icon"
                android:background="@drawable/custom_input_edit_text"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                />

            <TextView
                android:layout_width="180dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="13sp"
                android:textColor="#D12929"
                android:id="@+id/manageProfileTvPassword"
                android:text="Invalid ID"
                />


        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="390dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:layout_gravity="center"
        >

        <TextView
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="Id: 214798928"
            android:layout_marginLeft="25dp"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="18sp"
            android:id="@+id/manageProfileTvId"
            />

        <TextView
            android:id="@+id/manageProfileTvClass"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_marginLeft="60dp"
            android:text="Class: 1-1"
            android:textColor="@color/black"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="390dp"
        android:layout_height="120dp"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_gravity="center"
        >

        <ImageButton
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="65dp"
            android:id="@+id/manageProfileIbPicture"
            />

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="20dp"
            android:orientation="vertical"
            android:id="@+id/manageProfileLlTeacher"
            >

            <Button
                android:id="@+id/manageProfileBtnUpdate"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:layout_marginTop="15dp"
                android:textColor="@color/white"
                android:text="UPDATE"
                android:background="@drawable/rounded_button_blue_background"
                android:textSize="12sp" />

            <Button
                android:id="@+id/manageProfileBtnFinishTeacher"
                android:layout_width="120dp"
                android:layout_gravity="center"
                android:layout_height="35dp"
                android:text="FINISH"
                android:textColor="@color/white"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded_button_blue_background"
                android:textSize="12sp" />


        </LinearLayout>


    </LinearLayout>



    <TextView
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:text="Children:"
        android:layout_gravity="left"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="10dp"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:id="@+id/manageProfileTvChildren"
        />
    <LinearLayout
        android:layout_width="410dp"
        android:layout_height="40dp"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="Child number"
            android:textColor="@color/black"
            android:id="@+id/tvChildNumber"
            android:textSize="14sp"
            />

        <TextView
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginLeft="19dp"
            android:text="Name"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/tvChildName"
            android:textColor="@color/black"
            android:textSize="14sp"
            />

        <TextView
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginLeft="19dp"
            android:text="Class"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/tvClass"
            android:textColor="@color/black"
            android:textSize="14sp"
            />

        <TextView
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginLeft="19dp"
            android:text="Teacher"
            android:gravity="center"
            android:id="@+id/tvTeacher"
            android:textSize="14sp"
            android:textColor="@color/black"
            />

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="17dp"
        android:layout_marginTop="8dp"
        android:text="There aren't children yet"
        android:gravity="center"
        android:textColor="#F44336"
        android:textSize="13sp"
        android:id="@+id/manageProfileTvNoChildren"
        />

    <ListView
        android:layout_width="390dp"
        android:layout_height="140dp"
        android:layout_gravity="center"
        android:id="@+id/manageProfileLvChildren"
        />


    <LinearLayout
        android:layout_width="390dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        >

        <Button
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="ADD CHILD"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:layout_marginLeft="65dp"
            android:background="@drawable/rounded_button_blue_background"
            android:id="@+id/manageProfileBtnAddKids"
            />

        <Button
            android:id="@+id/manageProfileBtnFinishParent"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="FINISH"
            android:textColor="@color/white"
            android:background="@drawable/rounded_button_blue_background"
            android:layout_marginLeft="20dp"
            android:textSize="12sp" />

    </LinearLayout>





</LinearLayout>