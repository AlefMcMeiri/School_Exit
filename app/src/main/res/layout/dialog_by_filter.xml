<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="370dp"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:layout_height="360dp"
    android:background="@drawable/background_dialogs">

    <TextView
        android:layout_width="300dp"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:layout_height="80dp"
        android:text="Please enter the full name of the child/parent"
        android:id="@+id/childOrParentDialogScreenTvEnter"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textSize="30sp"
        />

    <EditText
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:inputType="text"
        android:background="@drawable/custom_input_edit_text"
        android:drawableStart="@drawable/custom_person_icon"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:drawablePadding="8dp"
        android:hint="First and last name"
        android:id="@+id/childOrParentDialogScreenEtName"
        />

    <TextView
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="That name doesn't exist in the system"
        android:id="@+id/childOrParentDialogScreenTvNotExist"
        android:textColor="#D12929"
        />

    <Button
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:text="SUBMIT"
        android:textColor="@color/white"
        android:id="@+id/childOrParentDialogScreenBtnSubmit"
        android:background="@drawable/rounded_button_white_background"
        />
    <Button
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:text="CANCEL"
        android:textColor="@color/white"
        android:background="@drawable/rounded_button_white_background"
        android:id="@+id/childOrParentDialogScreenBtnCancel"
        />


</LinearLayout>