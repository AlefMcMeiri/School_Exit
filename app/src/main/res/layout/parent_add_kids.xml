<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/background_sign_up">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:textColor="@color/black"
        android:text="Please enter the requested details of your kid"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textSize="30sp"
        />

    <EditText
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:inputType="textCapWords"
        android:id="@+id/parentAddKidsScreenEtFirstName"
        android:hint="First Name"
        android:background="@drawable/custom_input_edit_text"
        android:drawableStart="@drawable/custom_person_icon"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:drawablePadding="8dp"
        />

    <TextView
        android:layout_width="180dp"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="13sp"
        android:textColor="#D12929"
        android:id="@+id/parentAddKidsScreenTvFirstName"
        android:text="Invalid first name"
        />

    <EditText
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:inputType="textCapWords"
        android:layout_marginTop="10dp"
        android:id="@+id/parentAddKidsScreenEtLastName"
        android:hint="Last Name"
        android:background="@drawable/custom_input_edit_text"
        android:drawableStart="@drawable/custom_person_icon"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:drawablePadding="8dp"/>

    <TextView
        android:layout_width="180dp"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="13sp"
        android:textColor="#D12929"
        android:id="@+id/parentAddKidsScreenTvLastName"
        android:text="Invalid last name"
        />

    <EditText
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:id="@+id/parentAddKidsScreenEtId"
        android:inputType="number"
        android:hint="ID"
        android:background="@drawable/custom_input_edit_text"
        android:drawableStart="@drawable/custom_id_icon"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:drawablePadding="8dp"/>

    <TextView
        android:layout_width="180dp"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="13sp"
        android:textColor="#D12929"
        android:id="@+id/parentAddKidsScreenTvId"
        android:text="Invalid ID"
        />

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            />

        <TextView
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:textColor="@color/black"
            android:text="Grade"
            android:gravity="center"
            android:textSize="15sp"
            />

        <TextView
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="Number of class"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="12sp"
            />


    </LinearLayout>


    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="@color/black"
            android:text="class:"

            />
        <Spinner
            android:id="@+id/parentAddKidsScreenSpinnerGrade"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:prompt="@string/spinner_kid_class_grade"
            />

        <Spinner
            android:id="@+id/parentAddKidsScreenSpinnerNumber"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:prompt="@string/spinner_kid_class_number"
            />

    </LinearLayout>


    <Button
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:text="ADD KID"
        android:textColor="@color/white"
        android:id="@+id/parentAddChildrenBtnAddKid"
        android:background="@drawable/rounded_button_blue_background"
        android:layout_marginTop="20dp"
        />

    <Button
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:text="FINISH"
        android:textColor="@color/white"
        android:background="@drawable/rounded_button_blue_background"
        android:id="@+id/parentAddChildrenBtnFinish"
        android:layout_marginTop="15dp"
        />

</LinearLayout>