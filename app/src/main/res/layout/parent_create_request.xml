<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@drawable/background_sign_up">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New request"
        android:textSize="50sp"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:layout_marginTop="50dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        >

        <TextView
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_marginLeft="25dp"
            android:text="Choose children:"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/parentCreateRequestScreenSpinnerChild"
            android:layout_width="205dp"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:prompt="@string/choose_child" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:text="Choose date:"
            android:id="@+id/tvChoosingDate"
            android:textColor="@color/black"
            android:layout_marginLeft="25dp"
            android:textSize="20sp" />

        <TextView
            android:layout_width="205dp"
            android:layout_height="40dp"
            android:text="Press to choose date"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            android:textSize="20sp"
            android:id="@+id/parentCreateRequestScreenTvChooseDate"
            android:textColor="#00AEFF"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_marginLeft="25dp"
            android:id="@+id/tvChoosingHour"
            android:text="Choose time:"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:layout_width="205dp"
            android:layout_height="40dp"
            android:text="Press to choose time"
            android:textColor="#00AEFF"
            android:gravity="center"
            android:id="@+id/parentCreateRequestScreenTvChooseTime"
            android:layout_marginLeft="15dp"
            android:textSize="20sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_gravity="right">


        <TextView
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:text="Choose reason:"
            android:layout_marginLeft="25dp"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/parentCreateRequestScreenSpinnerReason"
            android:layout_width="205dp"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:prompt="@string/choose_reason" />

    </LinearLayout>


    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:hint="Note for teacher (optional)"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:id="@+id/parentCreateRequestScreenEtNote"
        android:textSize="20sp"
        android:background="@drawable/custom_input_edit_text"
        android:drawableStart="@drawable/custom_note_icon"
        android:drawablePadding="8dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        />

    <TextView
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="You didn't enter date or time"
        android:textColor="#F44336"
        android:id="@+id/parentCreateRequestScreenTvNotValid"
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        />


    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Send request"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:background="@drawable/rounded_button_blue_background"
        android:id="@+id/parentCreateRequestScreenBtnSendRequest"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="CANCEL"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:background="@drawable/rounded_button_blue_background"
        android:id="@+id/parentCreateRequestScreenBtnCancel"
        android:layout_marginTop="15dp" />

</LinearLayout>