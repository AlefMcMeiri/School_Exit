<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_sign_up"
    >



    <TextView
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:text="Requests"
        android:textSize="50sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/black"
        android:layout_marginTop="50dp"
        />

    <LinearLayout
        android:layout_width="410dp"
        android:layout_height="50dp"
        >

        <TextView
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:text="Request number"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="15sp"
            />

        <TextView
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_marginLeft="19dp"
            android:text="Child"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="17sp"
            />

        <TextView
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_marginLeft="19dp"
            android:text="Date"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="17sp"
            />

        <TextView
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_marginLeft="19dp"
            android:text="Reason"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="14sp"
            />

    </LinearLayout>

    <Spinner
        android:layout_width="390dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:id="@+id/watchRequestsSpFilter"
        android:layout_marginTop="10dp"
        android:prompt="@string/choose_child" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="5dp"
        android:text="There aren't mach requests"
        android:gravity="center"
        android:textColor="#F44336"
        android:id="@+id/watchRequestsTvNoRequests"
        />

    <ListView
        android:layout_width="390dp"
        android:layout_height="380dp"
        android:layout_gravity="center"
        android:id="@+id/watchRequestsLvRequests"
        />

    <Button
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:text="BACK"
        android:id="@+id/watchRequestsBtnBack"
        android:textColor="@color/white"
        android:background="@drawable/rounded_button_blue_background"
        />

</LinearLayout>