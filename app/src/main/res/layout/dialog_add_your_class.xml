<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="370dp"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@drawable/background_dialogs"
    android:layout_height="380dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="One last detail :)"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="35sp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="please enter your home class: "
        android:textSize="20sp"
        android:textColor="@color/black"
        android:gravity="center"
        />


    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            />

        <TextView
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="Grade"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="@color/black"
            />

        <TextView
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="Number of class"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="12sp"
            />


    </LinearLayout>


    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:text="class:"

            />
        <Spinner
            android:id="@+id/fillYourClassScreenSpinnerGrade"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:prompt="@string/spinner_teacher_class_grade"
            />

        <Spinner
            android:id="@+id/fillYourClassScreenSpinnerNumber"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:prompt="@string/spinner_teacher_class_number"
            />

    </LinearLayout>

    <Button
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:background="@drawable/rounded_button_white_background"
        android:id="@+id/fillYourClassScreenBtnSubmit"
        android:text="SUBMIT"
        android:textColor="@color/white"
        />

    <Button
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:background="@drawable/rounded_button_white_background"
        android:id="@+id/fillYourClassScreenBtnCancel"
        android:text="CANCEL"
        />




</LinearLayout>